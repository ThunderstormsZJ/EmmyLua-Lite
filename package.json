{
	"name": "emmylua-lite",
	"displayName": "EmmyLua-Lite",
	"description": "Lua developement and debug tools.",
	"license": "MIT",
	"version": "0.3.4",
	"repository": {
		"type": "git",
		"url": "https://github.com/ThunderstormsZJ/EmmyLua-Lite"
	},
	"bugs": {
		"url": "https://github.com/ThunderstormsZJ/EmmyLua-Lite/issues"
	},
	"publisher": "wellshsu",
	"author": {
		"name": "wellshsu",
		"email": "wellshsu@outlook.com"
	},
	"engines": {
		"vscode": "^1.39.0"
	},
	"icon": "res/logo.png",
	"categories": [
		"Programming Languages",
		"Debuggers",
		"Snippets"
	],
	"keywords": [
		"lua",
		"format",
		"luaide",
		"unity",
		"cocos",
		"emmylua"
	],
	"activationEvents": [
		"onLanguage:lua",
		"onDebug"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"breakpoints": [
			{
				"language": "lua"
			}
		],
		"debuggers": [
			{
				"type": "emmylua_attach",
				"label": "EmmyLua Attach Debug",
				"program": "./out/src/debugger/EmmyAttachDebugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"attach": {
						"required": [
							"pid"
						],
						"properties": {
							"pid": {
								"type": "number",
								"description": "%debug.attach.target_pid%",
								"default": 0
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "emmylua_attach",
						"request": "attach",
						"name": "%debug.attach.name%",
						"pid": 0
					}
				],
				"configurationSnippets": [
					{
						"label": "%debug.attach.label%",
						"description": "%debug.attach.desc%",
						"body": {
							"type": "emmylua_attach",
							"request": "attach",
							"name": "%debug.attach.name%",
							"pid": 0
						}
					}
				],
				"languages": [
					"lua"
				]
			},
			{
				"type": "emmylua_new",
				"label": "EmmyLua New Debugger",
				"program": "./out/src/debugger/EmmyDebugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"host",
							"port",
							"ideConnectDebugger"
						],
						"properties": {
							"host": {
								"type": "string",
								"description": "host",
								"default": "localhost"
							},
							"port": {
								"type": "number",
								"description": "port",
								"default": 9966
							},
							"ideConnectDebugger": {
								"type": "boolean",
								"description": "连接方式",
								"default": true
							},
							"ext": {
								"type": "array",
								"description": "Lua文件后缀",
								"default": [
									".lua"
								]
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "emmylua_new",
						"request": "launch",
						"name": "EmmyLua New Debug",
						"host": "localhost",
						"port": 9966,
						"ext": [
							".lua",
							".lua.txt",
							".lua.bytes"
						],
						"ideConnectDebugger": true
					}
				],
				"configurationSnippets": [
					{
						"label": "EmmyLua New Debug",
						"description": "EmmyLua New Debug",
						"body": {
							"type": "emmylua_new",
							"request": "launch",
							"name": "EmmyLua New Debug",
							"host": "localhost",
							"port": 9966,
							"ext": [
								".lua",
								".lua.txt",
								".lua.bytes"
							],
							"ideConnectDebugger": true
						}
					}
				],
				"languages": [
					"lua"
				]
			}
		],
		"snippets": [
			{
				"language": "lua",
				"path": "./res/snippets.json"
			}
		],
		"languages": [
			{
				"id": "lua",
				"extensions": [
					".lua"
				],
				"aliases": [
					"EmmyLua-Lite"
				],
				"configuration": "./res/languages.json"
			}
		],
		"grammars": [
			{
				"language": "lua",
				"scopeName": "source.lua",
				"path": "./res/grammars.json"
			}
		],
		"commands": [
			{
				"command": "emmylua-lite.toUpperCase",
				"title": "To UpperCase"
			},
			{
				"command": "emmylua-lite.toLowerCase",
				"title": "To LowerCase"
			},
			{
				"command": "emmylua-lite.about",
				"title": "About emmylua-lite"
			},
			{
				"command": "emmylua-lite.formatFiles",
				"title": "Lua/Format File(s)"
			},
			{
				"command": "emmylua-lite.createTemplate",
				"title": "Lua/New Template"
			},
			{
				"command": "emmylua-lite.openRes",
				"title": "Lua/Open Res"
			},
			{
				"command": "emmylua-lite.convertTsFile",
				"title": "Lua/To Typescript"
			},
			{
				"command": "emmylua-lite.convertTsText",
				"title": "To Typescript"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "emmylua-lite.formatFiles",
					"group": "emmylua-lite"
				},
				{
					"command": "emmylua-lite.createTemplate",
					"group": "emmylua-lite"
				},
				{
					"command": "emmylua-lite.openRes",
					"group": "emmylua-lite"
				}
			],
			"editor/context": [
				{
					"command": "emmylua-lite.toUpperCase",
					"group": "emmylua-lite",
					"when": "editorHasSelection && editorLangId == lua"
				},
				{
					"command": "emmylua-lite.toLowerCase",
					"group": "emmylua-lite",
					"when": "editorHasSelection && editorLangId == lua"
				},
				{
					"command": "emmylua-lite.convertTsText",
					"group": "emmylua-lite",
					"when": "editorHasSelection"
				}
			]
		},
		"keybindings": [
			{
				"command": "emmylua-lite.toUpperCase",
				"key": "CTRL+L CTRL+U",
				"when": "editorHasSelection && editorLangId == lua"
			},
			{
				"command": "emmylua-lite.toLowerCase",
				"key": "CTRL+L CTRL+L",
				"when": "editorHasSelection && editorLangId == lua"
			},
			{
				"command": "emmylua-lite.convertTsText",
				"key": "CTRL+K CTRL+V",
				"when": "editorHasSelection"
			}
		],
		"configuration": {
			"type": "object",
			"title": "emmylua-lite",
			"properties": {
				"emmylua-lite.javahome": {
					"type": "string",
					"default": null,
					"description": "JAVA HOME.\nJava环境根目录."
				},
				"emmylua-lite.enableHighlight": {
					"type": "boolean",
					"default": true,
					"description": "Highlight global var.\n全局变量高亮显示."
				},
				"emmylua-lite.highlightNormal": {
					"type": "string",
					"default": "#66CCFD",
					"description": "Light theme highlight color.\n[白色系主题]高亮的颜色."
				},
				"emmylua-lite.highlightDark": {
					"type": "string",
					"default": "#00D6AA",
					"description": "Dark theme highlight color.\n[黑色系主题]高亮的颜色."
				},
				"emmylua-lite.theme.light.parameter": {
					"type": "string",
					"default": "#d0a25e",
					"description": "Light theme parameter color.\n[白色系主题]参数颜色."
				},
				"emmylua-lite.theme.light.global": {
					"type": "string",
					"default": "#83a8ed",
					"description": "Light theme global color.\n[白色系主题]全局变量颜色."
				},
				"emmylua-lite.theme.light.annotation": {
					"type": "string",
					"default": "#2B91AF",
					"description": "Light theme annotation color.\n[白色系主题]注解颜色."
				},
				"emmylua-lite.theme.dark.parameter": {
					"type": "string",
					"default": "#66CCFF",
					"description": "Dark theme parameter color.\n[黑色系主题]参数颜色."
				},
				"emmylua-lite.theme.dark.global": {
					"type": "string",
					"default": "#00D6AA",
					"description": "Dark theme parameter color.\n[黑色系主题]参数颜色."
				},
				"emmylua-lite.theme.dark.annotation": {
					"type": "string",
					"default": "#00D6AA",
					"description": "Dark theme annotation color.\n[黑色系主题]注解颜色."
				},
				"emmylua-lite.enableFormat": {
					"type": "boolean",
					"default": true,
					"description": "Enable internal format tool.\n是否使用格式化."
				},
				"emmylua-lite.luaOperatorCheck": {
					"type": "boolean",
					"default": true,
					"description": "Set false if you override operator in your code.\n是否解析符号重载."
				},
				"emmylua-lite.luaFunArgCheck": {
					"type": "boolean",
					"default": true,
					"description": "Check function args, 'set true' doesn't allow same arg identifier.\n是否解析函数的参数."
				},
				"emmylua-lite.moduleFunNestingCheck": {
					"type": "boolean",
					"default": false,
					"description": "Check module function nesting.\n模块方法嵌套检查, 如果在一个方法中出现另外一个模块方法会认为是错误的."
				},
				"emmylua-lite.templateDefine": {
					"type": "array",
					"default": [],
					"description": "Replace specific var in template file.\n模板值定义, 用于创建模板文件时全局替换.",
					"items": {
						"type": "object"
					}
				},
				"emmylua-lite.templateDir": {
					"type": "string",
					"default": "",
					"description": "Template file directory, support recursive.\n模板文件目录."
				},
				"emmylua-lite.exclude": {
					"type": "array",
					"default": [],
					"description": "Exclude specific file(s) or folder(s).\n需要排除的文件夹, 这些文件夹将不会被解析.",
					"items": {
						"type": "string"
					}
				},
				"emmylua-lite.apiFolders": {
					"type": "array",
					"default": [],
					"description": "API define's directory(relative/absolute).\nAPI提示文件路径(相对/绝对).",
					"items": {
						"type": "string"
					}
				},
				"emmylua-lite.formatHex": {
					"type": "boolean",
					"default": true,
					"description": "Convert hex to decimal.\n是否格式化十六进制的数字."
				},
				"emmylua-lite.numberRadix": {
					"type": "array",
					"default": [
						10
					],
					"description": "Display number radix when debug number value.\n调试时需要显示的数字进制格式, 例如二进制, 十进制等."
				},
				"emmylua-lite.enableDiagnostic": {
					"type": "boolean",
					"default": true,
					"description": "Enable code diagnostic.\n是否启用代码分析, 如果禁用将不会有错误提示."
				},
				"emmylua-lite.typescriptDefine": {
					"type": "array",
					"default": [],
					"description": "Replace specific var in typescript content.\n转换为Typescript时的模板值定义, 用于全局替换转化内容.",
					"items": {
						"type": "object"
					}
				},
				"emmylua-lite.showWeather": {
					"type": "boolean",
					"default": false,
					"description": "If show today's weather?.\n是否显示天气, 默认关闭."
				},
				"emmylua-lite.formatUseTab": {
					"type": "boolean",
					"default": false,
					"description": "If format document by indenting tab?.\n是否使用tab来缩进代码, 默认关闭."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "node ./build/prepare.js && tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.32",
		"@types/node": "^7.0.43",
		"@types/socket.io": "^1.4.27",
		"@types/socket.io-client": "^1.4.27",
		"tslint": "^5.8.0",
		"mocha": "^2.3.3",
		"ts-loader": "^5.3.3",
		"typescript": "^4.0.2",
		"vscode": "^1.1.22",
		"download": "^7.1.0",
		"filecopy": "^4.0.2"
	},
	"dependencies": {
		"rd": "^1.1.2",
		"vscode-debugadapter": "^1.31.0",
		"vscode-debugprotocol": "^1.31.0",
		"vscode-languageclient": "^5.1.0",
		"iconv-lite": "^0.5.0"
	}
}
